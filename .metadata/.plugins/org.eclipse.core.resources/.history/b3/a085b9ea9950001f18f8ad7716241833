package com.aurionpro.behavioural.observer.test;

import com.aurionpro.behavioural.observer.model.*;

public class PacketTest {

    public static void main(String[] args) {
        Packet packet = new Packet(new Ordered());

        packet.printCurrentState();  // Should print: Current state: Ordered

        packet.goToNextState();
        packet.printCurrentState();  // Should print: Current state: Shipped

        packet.goToNextState();
        packet.printCurrentState();  // Should print: Current state: Delivered
    }
}
